<RelativeLayout tools:context=".MainActivity"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="wrap_content"
        android:layout_height="33dp"
        android:layout_toLeftOf="@id/depthText"
        android:layout_toRightOf="@+id/magnitudeImage"
        android:textSize="12dp"
        android:text="This is Test Text" />

    <TextView
        android:id="@+id/dateTextView"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_below="@+id/titleTextView"
        android:layout_toLeftOf="@id/depthText"
        android:layout_toRightOf="@+id/magnitudeImage"
        android:textSize="12dp"
        android:text="" />

    <TextView
        android:id="@+id/descriptionTextView"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_below="@+id/dateTextView"
        android:layout_alignParentRight="true"
        android:layout_alignBottom="@+id/magnitudeImage"
        android:layout_toRightOf="@+id/magnitudeImage"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:padding="2dp"
        android:textSize="20dp"
        android:text="Press to see more details..." />

    <ImageView
        android:id="@+id/magnitudeImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/shape_drawable"
        app:tint="@color/DarkRed" />

    <TextView
        android:id="@+id/magnitudeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/magnitudeImage"
        android:layout_alignTop="@+id/magnitudeImage"
        android:layout_alignRight="@+id/magnitudeImage"
        android:layout_alignBottom="@+id/magnitudeImage"
        android:gravity="center_horizontal|center_vertical"
        android:text="9.1" />

    <TextView
        android:id="@+id/depthText"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_above="@id/descriptionTextView"
        android:text="9.1" />


</RelativeLayout>